<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="16dp">

    <!-- Nom du client et bouton supprimer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/editNomClient"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Client"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:background="@android:drawable/edit_text" />

        <Button
            android:id="@+id/buttonSupprimerClient"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="X"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Conteneur pour les types de contenants -->
    <LinearLayout
        android:id="@+id/layoutGouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- Bouton pour ajouter un type -->
    <Button
        android:id="@+id/buttonAjouterType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un type"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_green_dark"
        android:layout_marginTop="8dp" />
</LinearLayout>